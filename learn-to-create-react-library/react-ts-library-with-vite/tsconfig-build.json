{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist",
    "moduleResolution": "node", // Use "node" for better compatibility
    "module": "ESNext",         // Keep consistent with app
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true
  },
  "include": ["lib/**/*"]
}
